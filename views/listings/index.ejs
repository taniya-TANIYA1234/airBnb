<% layout('/layouts/boilerplate') %>
<body>
    <h1>All Listings</h1>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-2">
   <% for(let list of allListings){ %>

     <a href="/listings/<%= list._id%>" style="text-decoration:none; color:black;">    
 <div class="card col" style="width: 15rem;">
  <img src="<%= list.imageUrl%>" class="card-img-top" alt="..." style="height:15rem;">
  <div class="card-body">
    <h5 class="card-title"><%= list.title.slice(0,12).concat("...") %></h5>
    <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN")%>/month</p>
    
  </div>
</div></a> 
  <% } %>
</div>

</body>




